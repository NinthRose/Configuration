#!/bin/sh
#=============================================================================#
# Vonng's host setup script
#   Author: Vonng (fengruohang@outlook.com)
#=============================================================================#

#—————————————————————————————————————————————————————————————————————————————#
# Locate
dirname $0 | grep "^/" >/dev/null
if [ $? -eq 0 ]; then
  # Absolute path
  cd $(dirname $0);
else
  # Relative path
  cd $(dirname $(pwd)/$0);
fi

SRC_HOME=`pwd`;
#—————————————————————————————————————————————————————————————————————————————#

#—————————————————————————————————————————————————————————————————————————————#
# Copy config file
sudo cp ${SRC_HOME}/hosts /etc/hosts;
echo "hosts done"
#—————————————————————————————————————————————————————————————————————————————#