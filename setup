echo "————————————————————————————————"
echo "conf setup begin"
#—————————————————————————————————————————————————————————————————————————————#
# Directory
MY_USR=$HOME/usr/
mkdir -p ${MY_USR} ${MY_USR}/bin ${MY_USR}/local ${MY_USR}/conf ${MY_USR}/tmp
#—————————————————————————————————————————————————————————————————————————————#
# bin
bin/setup
#—————————————————————————————————————————————————————————————————————————————#
# Bash
bash/setup
#—————————————————————————————————————————————————————————————————————————————#
# Git
git/setup
#—————————————————————————————————————————————————————————————————————————————#
# SSH
ssh/setup
#—————————————————————————————————————————————————————————————————————————————#
# Host
# host/setup
#—————————————————————————————————————————————————————————————————————————————#
# Vim
#curl https://j.mp/spf13-vim3 -L > spf13-vim.sh && sh spf13-vim.sh
